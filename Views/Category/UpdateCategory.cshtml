@model MVC_Stok.Models.Entitiy.TblCategory
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Category Güncelleme Sayfası</h2>
<br />
<br />
<br />

<form method="post">
    <div class="form-group">
        @Html.HiddenFor(x => x.CategoryId)
        <label><b> Kategori Adı</b></label>
        <br />
        <br />
        @Html.TextAreaFor(x => x.CategoryAd, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Güncelle</button>
    </div>
</form>



